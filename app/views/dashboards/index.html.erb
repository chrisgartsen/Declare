<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Dashboard' =>'#') %>
<% end %>

<div class='tabs'>
  <ul>
    <li class="is-active"><a>Overview</a></li>

    <% @dashboard.projects.each do |project| %>
      <li><%= link_to project.name, project %></li>
    <% end %>

  </ul>
</div>

<h4 class="title is-4">Projects</h3>

<%= table(['Name', 'Outstanding','Total']) do %>
  <%= render partial: 'dashboards/project', collection: @dashboard.projects %>
<% end %>

<%= link_to new_project_path, class: 'button is-default' do %>
  <span class='icon'><i class="fa fa-plus" aria-hidden="true"></i></span>
  <span>Add project</span>
<% end %>

<%= link_to projects_path, class: 'button is-default' do %>
  <span class='icon'><i class="fa fa-list" aria-hidden="true"></i></span>
  <span>Manage projects</span>
<% end %>


