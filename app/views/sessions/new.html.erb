<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Sign in' =>'#') %>
<% end %>

<div class='columns'>
  <div class='column is-5 is-offset-one-quarter'>
    <%= pageheader('Sign in') %>

    <%= form_tag sessions_path  do %>

      <% if flash[:error] %>
        <article class="message is-danger">
          <div class="message-header">
            <p><strong>A problem has occurred while signing in.</strong></p>
          </div>
          <div class="message-body"><%= flash[:error] %></div>
        </article>
      <% end %>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <%= label_tag(:email, nil, class: 'label') %>
        </div>
        <div class="field-body">
          <div class="field">
            <p class="control has-icons-left">
               <%= text_field_tag(:email, nil, class: 'input', placeholder: 'Email') %>
              <span class="icon is-small is-left">
                <i class="fa fa-envelope"></i>
              </span>
            </p>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <%= label_tag(:password, nil, class: 'label') %>
        </div>
        <div class="field-body">
          <div class="field">
            <p class="control has-icons-left">
              <%= password_field_tag(:password, nil, class: 'input', placeholder: 'Password') %>
              <span class="icon is-small is-left">
                <i class="fa fa-unlock-alt"></i>
              </span>
            </p>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label"><!-- Left empty for spacing --></div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <%= button_tag(type: 'submit', id: 'login-button', class: 'button is-primary') do %>
                <span class="icon"><i class="fa fa-sign-in"></i></span><span>Sign in</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    <% end %>
    <br/>
    <p>Don't have an account? <%= link_to 'Sign up', new_user_path %></p>

  </div>

</div>
