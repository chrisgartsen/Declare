<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Log in' =>'#') %>
<% end %>

<div class='container'>

  <div class='row'>
    <div class='col-md-6 col-md-offset-2'>

      <h1 class='pageheader'>Log in</h1>

      <%= form_tag sessions_path, class: 'form-horizontal'  do %>

        <% if flash[:error] %>
          <div class='alert alert-danger'>
            <strong>A problem has occurred while loging in.</strong>
            <p><%= flash[:error] %></p>
          </div>
        <% end %>

        <div class='form-group'>
          <%= label_tag(:email, nil, class: 'control-label col-sm-4') %>
          <div class='col-sm-6'>
            <%= text_field_tag(:email, nil, class: 'form-control') %>
          </div>
        </div>
        <div class='form-group'>
          <%= label_tag(:password, nil, class: 'control-label col-sm-4') %>
          <div class='col-sm-6'>
            <%= password_field_tag(:password, nil, class: 'form-control') %>
          </div>
        </div>

        <div class="form-group">
          <div  class= 'col-sm-8 col-sm-offset-4')>
            <%= button_tag(type: 'submit', id: 'login-button', class: 'btn btn-primary') do %>
             <i class='fa fa-sign-in'></i> Login
            <% end %>
          </div>
        </div>

      <% end %>

      <p>Don't have an account? <%= link_to 'Sign up', new_user_path %></p>

    </div>
  </div>

</div>
