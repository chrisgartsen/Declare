<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Projects' => projects_path, 'Edit Project' => '#') %>
<% end %>

<div class='container'>

  <div class='row'>
    <div class='col-md-6 col-md-offset-2'>

      <h1 class='pageheader'>Edit Project</h1>

      <%= form_for @project, html: { class: 'form-horizontal' } do |f| %>
        <%= f.error_message_group %>
        <%= f.text_field_group(:name) %>
        <%= f.submit_button_group('Update project', id: 'update-project', back_url: projects_path) %>
      <% end %>

    </div>
  </div>

</div>
