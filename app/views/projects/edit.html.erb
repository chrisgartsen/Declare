<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Projects' => projects_path, 'Edit Project' => '#') %>
<% end %>

<div class='container'>

  <div class='row'>
    <div class='col-md-6 col-md-offset-2'>

      <h1 class='pageheader'>Edit Project</h1>

      <%= form_for @project, html: { class: 'form-horizontal' } do |f| %>

        <% if @project.errors.any? %>
          <div class='alert alert-danger'>
            <strong>A problem has occurred while submitting your data.</strong>
            <p><%= pluralize(@project.errors.count, 'error') %> prohibited this Project from being saved.</p>
            <ul>
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.text_field_group(:name) %>

        <div class='form-group'>
          <div class="col-sm-offset-4 col-sm-9">
            <%= f.submit('Update project', id: 'update-project', class:'btn btn-primary') %>
            <%= link_to 'Back to list', projects_path , class: 'btn btn-default' %>
          </div>
        </div>

      <% end %>

    </div>
  </div>

</div>
