<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Projects' =>'#') %>
<% end %>

<div class='container'>

  <div class='row'>
    <div class='col-md-10 col-md-offset-1'>

      <h1 class='pageheader'>Projects</h1>

      <%= table(['Name', 'Created at', 'Updated at', '']) do %>
        <%= render @projects %>
      <% end %>

      <%= link_to new_project_path, id: 'add-project', class: 'btn btn-primary' do %>
        <i class="fa fa-plus fa-lg"></i> Add project
      <% end %>

    </div>
  </div>
</div>
