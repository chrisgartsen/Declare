<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Projects' => projects_path, 'Add Project' => '#') %>
<% end %>

<div class='container'>

  <div class='row'>
    <div class='col-md-6 col-md-offset-2'>

      <h1 class='pageheader'>Add project</h1>

      <%= form_for @project, html: { class: 'form-horizontal' } do |f| %>
        <%= f.error_message_group %>
        <%= f.text_field_group(:name) %>
        <%= f.submit_button_group('Add project', id: 'add-project') %>
      <% end %>

    </div>
  </div>
</div>
