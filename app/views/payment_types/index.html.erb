<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Payment types' =>'#') %>
<% end %>

<div class='container'>

  <div class='row'>
    <div class='col-md-10 col-md-offset-1'>

      <%= nav_tab('Currencies' => currencies_path,
                  'Expense types' => expense_types_path,
                  'Payment types' => '#') %>

      <table class='table table-hover'>
        <thead>
          <th>Name</th>
          <th>Created at</th>
        </thead>

        <tbody>
          <%= render @payment_types %>
        </tbody>

      </table>

    </div>
  </div>
</div>
