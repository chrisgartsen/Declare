<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Contact' =>'#') %>
<% end %>

<div class='container'>

  <div class='row'>
    <div class='col-md-6 col-md-offset-2'>

      <h1 class='pageheader'>Contact</h1>

      <p>Send us a message.</p>

      <%= form_for @contact_message, html: { class: 'form-horizontal' } do |f| %>
        <%= f.error_message_group %>
        <%= f.text_field_group(:email) %>
        <%= f.text_area_group(:message) %>
        <%= f.submit_button_group('Send message') %>
      <% end %>

    </div>
  </div>

</div>
