<% content_for(:breadcrumb) do %>
  <%= breadcrumb('Contact' =>'#') %>
<% end %>

<div class='container'>

  <div class='row'>
    <div class='col-md-6 col-md-offset-2'>

      <h1 class='pageheader'>Contact</h1>

      <p>Send us a message.</p>

      <%= form_for @contact_message, html: { class: 'form-horizontal' } do |f| %>
        <%= f.error_message_group %>
        <%= f.text_field_group(:email) %>
        <div class="form-group">
          <%= f.label(:message, class: 'col-sm-4 control-label') %>
          <div class="col-sm-6"><%= f.text_area(:message, class: 'form-control', rows: 10) %></div>
        </div>
        <%= f.submit_button_group('Send message') %>
      <% end %>

    </div>
  </div>

</div>
